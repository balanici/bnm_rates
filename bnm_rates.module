        'type' => MENU_CALLBACK,
        'file' => 'include/bnm_rates_functions.inc.php',
    );



    $items['bnm-rates-test-page'] = array(
        'page callback' => 'bnm_rates_test_page',
        'page arguments' => array(),
        'access arguments' => array('access content'),
        'type' => MENU_CALLBACK,
        'file' => 'include/bnm_rates_functions.inc.php',
    );



    return $items;
}


